    <style name="MainColor" parent="AppTheme.Base">
        <item name="android:windowBackground">@color/colorGreen</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>
